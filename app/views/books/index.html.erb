<h1>Listing books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Description</th>
      <th>Langauge</th>
      <th>Grade</th>
      <th>Subject</th>
      <th>Media type</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.category %></td>
        <td><%= book.description %></td>
        <td><%= book.langauge %></td>
        <td><%= book.grade %></td>
        <td><%= book.subject %></td>
        <td><%= book.media_type %></td>
        <td><%= book.address %></td>
        <td><%= link_to 'Show', book%></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

